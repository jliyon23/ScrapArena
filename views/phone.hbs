<div class="bg-white rounded-lg shadow-md">
    <div class="p-6 border-b border-gray-200">
        <a href="javascript:history.back()" class="text-blue-600 hover:text-blue-800 flex items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back
        </a>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <h2 class="text-2xl font-bold text-gray-800">{{specs.General.Name}}</h2>
            {{#if specs.General.Price}}
            <div class="mt-2 md:mt-0 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-md p-3 transform hover:scale-105 transition-transform duration-200">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div>
                        <div class="text-sm text-blue-100 font-medium">PRICE</div>
                        <div class="text-xl font-bold text-white">{{specs.General.Price}}</div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>

    <div class="md:flex">
        {{#if specs.General.Image}}
        <div class="md:w-1/3 p-6 flex items-center justify-center bg-gray-50">
            <img 
                src="{{specs.General.Image}}" 
                alt="{{specs.General.Name}}" 
                class="w-full h-auto max-h-80 object-contain"
                onerror="this.onerror=null; this.src='/placeholder.png'"
            >
        </div>
        {{/if}}
        
        <div class="{{#if specs.General.Image}}md:w-2/3{{else}}w-full{{/if}} p-6">
            <div class="space-y-6">
                {{#each specs}}
                    {{#if @key}}
                    <div class="spec-category">
                        <h3 class="text-lg font-semibold mb-3 text-blue-700 border-b border-gray-200 pb-2">{{@key}}</h3>
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-3">
                            {{#each this}}
                                {{#if @key}}
                                <div class="py-2 border-b border-gray-100 last:border-b-0">
                                    <div class="font-medium text-gray-600 text-sm">{{@key}}</div>
                                    <div class="text-gray-800 mt-1">{{this}}</div>
                                </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>