{{!< layouts/main}}
<div class="container mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">{{brandName}} Phones ({{totalPhones}} models)</h2>
            <a href="/" class="mt-2 md:mt-0 text-blue-600 hover:text-blue-800 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to brands
            </a>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {{#each phones}}
            <a href="/phone/{{id}}" class="phone-card bg-white hover:bg-gray-50 border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition duration-300">
                <div class="relative h-48 bg-gray-100">
                    <div class="skeleton-loader absolute inset-0"></div>
                    <img 
                        src="{{image}}" 
                        alt="{{name}}" 
                        class="absolute top-0 left-0 w-full h-full object-contain p-2"
                        onerror="this.onerror=null; this.src='/placeholder.png'"
                        onload="this.previousElementSibling.classList.add('hidden')"
                    >
                </div>
                <div class="p-3">
                    <div class="text-sm font-medium text-center text-gray-700 line-clamp-2 h-10">{{name}}</div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>

<style>
    /* Line clamping for text */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Ensure images are properly contained */
    .object-contain {
        object-fit: contain;
    }

    /* Skeleton loader animation */
    .skeleton-loader {
        background: linear-gradient(
            90deg,
            rgba(190, 190, 190, 0.2) 25%,
            rgba(129, 129, 129, 0.24) 37%,
            rgba(190, 190, 190, 0.2) 63%
        );
        background-size: 400% 100%;
        animation: skeleton-loading 1.4s ease infinite;
    }

    @keyframes skeleton-loading {
        0% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0 50%;
        }
    }
</style>

<script>
    // Show loading spinner when clicking phone cards
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.phone-card').forEach(card => {
            card.addEventListener('click', function(e) {
                showLoading();
            });
        });
    });
</script>