<div class="container mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8 brand-shadow">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 border-b border-gray-100 pb-4">
            <div class="flex items-center">
                <h2 class="text-2xl font-bold text-gray-800">{{brandName}} Phones</h2>
                <span class="ml-3 px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">{{totalPhones}} models</span>
            </div>
            <a href="/" class="mt-4 md:mt-0 text-blue-600 hover:text-blue-800 flex items-center font-medium group transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to brands
            </a>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
            {{#each phones}}
            <a href="/phone/{{id}}" class="phone-card bg-white hover:bg-blue-50 border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 flex flex-col">
                <div class="relative h-48 bg-gray-50 flex items-center justify-center p-4">
                    <div class="skeleton-loader absolute inset-0"></div>
                    <img 
                        src="{{image}}" 
                        alt="{{name}}" 
                        class="absolute top-0 left-0 w-full h-full object-contain p-3"
                        onerror="this.onerror=null; this.src='/placeholder.png'"
                        onload="this.previousElementSibling.classList.add('hidden')"
                    >
                </div>
                <div class="p-4 flex-grow flex items-center justify-center border-t border-gray-100">
                    <div class="text-sm font-medium text-center text-gray-700 line-clamp-2">{{name}}</div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>
